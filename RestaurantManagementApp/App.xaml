<Application x:Class="RestaurantManagementApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RestaurantManagementApp"
             xmlns:converters="clr-namespace:RestaurantManagementApp.Converters">

    <Application.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>
        <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter"/>
        <converters:NumberGreaterThanZeroToVisibilityConverter x:Key="NumberGreaterThanZeroToVisibilityConverter"/>
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
        <converters:OrderStatusToBrushConverter x:Key="OrderStatusToBrushConverter"/>
        <converters:OrderStatusToStringConverter x:Key="OrderStatusToStringConverter"/>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <converters:EqualToIntVisibilityConverter x:Key="EqualToIntVisibilityConverter"/>
        <converters:NotEqualToIntVisibilityConverter x:Key="NotEqualToIntVisibilityConverter"/>
        <converters:OrderStatusToVisibilityConverter x:Key="OrderStatusToVisibilityConverter"/>
        <converters:FirstImagePathConverter x:Key="FirstImagePathConverter"/>
    </Application.Resources>

</Application>
